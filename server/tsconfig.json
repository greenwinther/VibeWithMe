{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@types": ["types"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}