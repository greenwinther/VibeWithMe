{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared": ["shared"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "shared/**/*"]
}